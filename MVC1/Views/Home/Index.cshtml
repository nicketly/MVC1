@{
    ViewData["Title"] = "Home Page";
}

<div class="text-left">
    <form action="/home/calc" method="post">
        <div class="mb-3">
            <label for="num1" class="form-label">Операнд 1</label>
            <input type="text" name="num1" class="form-control" id="num1">
        </div>
        <div class="mb-3">
            <label for="num2" class="form-label">Операнд 2</label>
            <input type="text" name="num2" class="form-control" id="num2">
        </div>
        <div class="mb-3">
            <label for="num2" class="form-label">Тип операции</label>
            <select name="operationType" class="form-control">
                <option value="1">Сложение</option>
                <option value="2">Вычитание</option>
                <option value="3">Произведение</option>
                <option value="4">Деление</option>
            </select>
        </div>
        
        
        <button class="btn btn-primary">Рассчитать</button>
    </form>
</div>
